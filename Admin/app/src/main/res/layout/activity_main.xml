<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="HardcodedText"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/user_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp"
            app:cardBackgroundColor="@color/redDark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/user_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/common"
                    android:contentDescription="@string/img_desc"
                    app:srcCompat="@drawable/ic_person"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:id="@+id/user_count_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="36sp"
                    android:text="0"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_marginEnd="@dimen/common"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toEndOf="@+id/user_iv"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/all_user_head"/>
                <TextView
                    android:id="@+id/all_user_head"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/imprima"
                    android:text="All Users"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:background="@color/overlay"
                    android:paddingStart="@dimen/common"
                    android:paddingEnd="@dimen/common"
                    android:paddingTop="@dimen/common"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/user_iv"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:paddingStart="@dimen/common"
                    android:paddingEnd="@dimen/common"
                    android:paddingBottom="@dimen/common"
                    android:fontFamily="@font/imprima"
                    android:text="view all users >>"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:background="@color/overlay"
                    app:layout_constraintTop_toBottomOf="@+id/all_user_head"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/video_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp"
            android:layout_marginTop="@dimen/common"
            app:cardBackgroundColor="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/user_card"
            app:layout_constraintEnd_toEndOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/video_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/common"
                    android:contentDescription="@string/img_desc"
                    app:srcCompat="@drawable/ic_video"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:id="@+id/video_count_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="36sp"
                    android:text="0"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_marginEnd="@dimen/common"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toEndOf="@+id/video_iv"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/all_video_head"/>
                <TextView
                    android:id="@+id/all_video_head"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/overlay"
                    android:fontFamily="@font/imprima"
                    android:paddingStart="@dimen/common"
                    android:paddingTop="@dimen/common"
                    android:paddingEnd="@dimen/common"
                    android:text="All Videos"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/video_iv" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:paddingStart="@dimen/common"
                    android:paddingEnd="@dimen/common"
                    android:paddingBottom="@dimen/common"
                    android:fontFamily="@font/imprima"
                    android:text="view all videos >>"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:background="@color/overlay"
                    app:layout_constraintTop_toBottomOf="@+id/all_video_head"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/quote_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp"
            android:layout_marginTop="@dimen/common"
            app:cardBackgroundColor="@color/blueLight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/video_card">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/quote_iv"
                    android:layout_width="106dp"
                    android:layout_height="106dp"
                    android:padding="24dp"
                    app:tint="?attr/colorControlNormal"
                    android:contentDescription="@string/img_desc"
                    app:srcCompat="@drawable/ic_quotes"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:id="@+id/quote_count_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="36sp"
                    android:text="0"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_marginEnd="@dimen/common"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toEndOf="@+id/quote_iv"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/quote_head"/>
                <TextView
                    android:id="@+id/quote_head"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/imprima"
                    android:text="All Quotes"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:background="@color/overlay"
                    android:paddingStart="@dimen/common"
                    android:paddingEnd="@dimen/common"
                    android:paddingTop="@dimen/common"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/quote_iv"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:paddingStart="@dimen/common"
                    android:paddingEnd="@dimen/common"
                    android:paddingBottom="@dimen/common"
                    android:fontFamily="@font/imprima"
                    android:text="view all quotes >>"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:background="@color/overlay"
                    app:layout_constraintTop_toBottomOf="@+id/quote_head"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/rating_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp"
            android:layout_marginTop="@dimen/common"
            app:cardBackgroundColor="@color/cyanDark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/quote_card">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/rating_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/common"
                    android:contentDescription="@string/img_desc"
                    app:srcCompat="@drawable/ic_star"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:id="@+id/rating_count_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="36sp"
                    android:text="0"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_marginEnd="@dimen/common"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toEndOf="@+id/rating_iv"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/rating_head"/>
                <TextView
                    android:id="@+id/rating_head"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/imprima"
                    android:text="Average Rating"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:background="@color/overlay"
                    android:paddingStart="@dimen/common"
                    android:paddingEnd="@dimen/common"
                    android:paddingTop="@dimen/common"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rating_iv"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:paddingStart="@dimen/common"
                    android:paddingEnd="@dimen/common"
                    android:paddingBottom="@dimen/common"
                    android:fontFamily="@font/imprima"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:background="@color/overlay"
                    app:layout_constraintTop_toBottomOf="@+id/rating_head"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>